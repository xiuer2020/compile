<view class="person-info">
	<view class="mp-half-screen-dialog-inner-layout">
		<mp-halfScreenDialog show="{{show}}" closabled="{{true}}">
			<view slot="desc">
				<view class="mp-halfScreenDialog-title-inner-layout">
					<view class="title">城市地区</view>
					<text class="iconfont icon-guanbi" bindtap="switchShow"></text>
				</view>
				<view class="search-inner-layout">
					<text class="iconfont icon-chazhao"></text>
					<input placeholder="请输入省份/城市/市区搜索" placeholder-style="color: #a7a2a2;"></input>
				</view>
				<view class="tag-outer-layout">
					<view class="tag-title">热门城市</view>
					<view class="tag-inner-layout">
						<view class="tag" wx:for="{{hotCitys}}">
							{{item}}
						</view>
					</view>
				</view>
				<view class="fill-in">
					<view class="site-title-inner-layout">
						<view wx:for="{{siteTitle}}" class="site-title">
							{{item}}
						</view>
					</view>
					<view class="site-outer-layout" style="height:{{siteHeight*3*2}}rpx">
						<view class="site-inner-layout province" bindtouchstart="touchstartHandle" bindtouchmove="touchmoveHandle" data-type="province" style="transform: translateY({{provinceDiff}}rpx)">
							<view class="site {{-siteHeight * 2*(index+1) < provinceDiff && -siteHeight*index*2 >= provinceDiff ? 'active' : ''}}" wx:for="{{sites}}" bindtap="switchIndex" data-type="Province" data-index="{{index}}">{{item.name}}</view>
						</view>
						<view class="site-inner-layout city" data-type="city" bindtouchstart="touchstartHandle" bindtouchmove="touchmoveHandle" style="transform: translateY({{cityDiff}}rpx)">
							<view class="site {{-siteHeight *2* (index+1) < cityDiff && -siteHeight*index*2 >= cityDiff ? 'active' : ''}}" wx:for="{{sites[currentSelectedProvince].city}}" bindtap="switchIndex" data-type="City" data-index="{{index}}">{{item.name}}</view>
						</view>
						<view class=" site-inner-layout county" data-type="county" bindtouchstart="touchstartHandle" bindtouchmove="touchmoveHandle" style="transform: translateY({{countyDiff}}rpx)">
							<view class="site {{-siteHeight * (index+1)*2 < countyDiff && -siteHeight*index*2 >= countyDiff ? 'active' : ''}}" wx:for="{{sites[currentSelectedProvince].city[currentSelectedCity].area}}" bindtap="switchIndex" data-type="County" data-index="{{index}}">{{item}}</view>
						</view>
					</view>
					<view bindtap="affirm">
						<button type="primary">确定</button>
					</view>
				</view>
			</view>
		</mp-halfScreenDialog>
	</view>

	<pageTitle>{{type}}地址填写</pageTitle>
	<formLayout>
		<_list item="{{_list}}">
			<view slot="icon" item="{{icon}}">
				{{iconText}}
			</view>
			<view slot="title">
				{{type}}
			</view>
		</_list>
		<view class="list-outer-layout">
			<view class="name list-inner-layout">
				<list>
					<view slot="left">
						<input placeholder="真实姓名"></input>
					</view>
				</list>
			</view>
			<view class="phone list-inner-layout">
				<list>
					<view slot="left">
						<input placeholder="电话" type="number"></input>
					</view>
				</list>
			</view>

		</view>
		<view bindtap="switchShow">
			<list>
				<view slot="left">
					城市 / 区域
				</view>
			</list>
		</view>
		<list>
			<view slot="left">
				<input placeholder="详细地址"></input>
			</view>
		</list>
	</formLayout>
	<formLayout>
		<textarea placeholder="粘贴或输入整段地址, 点击'识别'自动拆分姓名, 电话和地址. 例如: 顺小哥, 132*****0000, 广东省深圳市某某街道某某大厦001号" placeholder-style="color: #9c9898; font-size: 21rpx;"></textarea>
	</formLayout>
	<view class="fixed-bottom">
		<view class="affirm">
			<button type="primary">
				<navigator open-type="navigateBack" delta="{{1}}">下单</navigator>
			</button>
		</view>
	</view>
</view>