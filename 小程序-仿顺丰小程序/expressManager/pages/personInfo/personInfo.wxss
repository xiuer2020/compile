/* weui兼容 */


.person-info {
  background: #e8e8e8;
  min-height: 100vh;
}

.person-info .form-layout {
  padding: 8px;
}

.person-info .form-layout .icon {
  padding: 2px 4px;
  margin-right: 16px;
  border-radius: 2px;
  font-size: 14px;
  font-weight: 900;
  color: #e8e8e8;
  position: relative;
}

.person-info .form-layout .icon.red{
  background: #ff0000;
}

.person-info .form-layout .icon.black{
  background: #000;
}


.person-info .form-layout .name {
  flex: 2;
}

.person-info .form-layout .phone {
  flex: 3;
}

.person-info .site-entrance {
  color: #808080;
}

.person-info .site-entrance.confirmed{
  color: #000;
}

/* 基本信息填写 */


.person-info .half-screen-dialog-desc {
  padding: 16px;
}

.person-info .half-screen-dialog-desc .search-icon{
  flex: 1;
  text-align: center;
}

.person-info .half-screen-dialog-desc .search {
  flex: 9;
}

.person-info .half-screen-dialog-desc .result-inner-layout {
  position: absolute;
  left: 0;
  top: 42px;
  width: 100%;
  height: 400px;
  overflow-y: auto;
  background: #fff;
  z-index: 1;
}
.person-info .half-screen-dialog-desc .result-inner-layout .result{
  line-height: 50px;
  height: 50px;
  border-bottom: 1px solid #ddd;
}

.person-info .half-screen-dialog-desc .icon-chazhao::before {
  font-size: 12px;
  color: #9c9898;
}

.person-info .half-screen-dialog-desc .tag-title {
  color: #9c9898;
  margin-bottom: 16px;
  font-size: 12px;
}

.person-info .half-screen-dialog-desc .tag {
  font-size: 12px;
  width: 22%;
  text-align: center;
  box-sizing: border-box;
  padding: 6px 0;
  border: 2px solid #dadada;
  border-radius: 14px;
  margin-right: 4%;
}

.person-info .half-screen-dialog-desc .tag:nth-child(-n+4) {
  margin-bottom: 16px;
}

.person-info .half-screen-dialog-desc .tag:nth-child(4n) {
  margin-right: 0;
}

.person-info .half-screen-dialog-desc .fill-in {
  position: relative;
  margin-top: 16px;
  padding: 16px 0;
}

.person-info .half-screen-dialog-desc .fill-in::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  border-top: 2px solid #e8e8e8;
}


.site-title {
  flex: 1;
  text-align: center;
  color: #272727;
  font-weight: 900;
}

.site {
  line-height: 40px;
  text-align: center;
}

.site.active {
  color: #f00;
}

.person-info .confirm {
  position: fixed;
  left: 0%;
  bottom: 0;
  height: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  width: 100%;
}

/* 操作反馈组件 */


.fixed-bottom {
  position: fixed;
  bottom: 20px;
  left: 0;
  right: 0;
}