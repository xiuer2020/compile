@import '../../assets/global.wxss';

.person-info {
  background: #e8e8e8;
  min-height: 100vh;
}



mp-halfScreenDialog .dialog--weui-half-screen-dialog {
  padding: 0;
}

mp-halfScreenDialog .dialog--weui-half-screen-dialog__ft {
  display: none;
}

mp-halfScreenDialog .dialog--weui-half-screen-dialog__hd {
  display: none;
}

.mp-halfScreenDialog-title-inner-layout {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  margin: 30rpx 0 40rpx;
  color: #272727;
}


.search-inner-layout {
  display: flex;
  height: 80rpx;
  padding: 0 40rpx;
  margin: 0 30rpx;
  border-radius: 40rpx;
  align-items: center;
  background: #e8e8e8;
}

.search {
  color: #dadada;
}

.icon-chazhao {
  margin-right: 14rpx;
}

.icon-chazhao::before {
  font-size: 24rpx;
  color: #9c9898;
}

.tag-outer-layout {
  margin: 30rpx 0;
  padding: 0 30rpx;

}

.tag-title {
  color: #9c9898;
  margin-bottom: 30rpx;
  font-size: 24rpx;
}

.tag-inner-layout {
  display: flex;
  flex-wrap: wrap;
  color: #272727;
}

.tag {
  font-size: 24rpx;
  width: 22%;
  text-align: center;
  box-sizing: border-box;
  padding: 10rpx 0;
  border: 4rpx solid #dadada;
  border-radius: 46rpx;
  margin-right: 4%;
}
.tag:nth-child(-n+4){
  margin-bottom: 30rpx;
}
.tag:nth-child(4n) {
  margin-right: 0;
}

.fill-in {
  position: relative;
  padding: 30rpx 0;
}

.fill-in::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  border-top: 2px solid #e8e8e8;
}

.site-title-inner-layout {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 0 40rpx;
}

.site-title{
  flex: 1;
  text-align: center;
  color: #272727;
  font-weight: 900;
}

.site-outer-layout {
  display: flex;
  justify-content: space-between;
  margin: 0 40rpx;
  position: relative;
  overflow: hidden;
  color: #9c9c9c;
  margin-bottom: 30rpx;

}

.site-outer-layout::before{
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 80rpx;
  width: 100%;
  border-top: 2rpx solid #dadada;
  border-bottom: 2rpx solid #dadada;
}
.site-inner-layout{
  flex: 1;
}
.site{
  line-height: 80rpx;
  text-align: center;
}
.site.active{
  color: #f00;
}
.list-outer-layout {
  display: flex;
}

.name {
  flex: 3;
  margin-right: 30rpx;
}

.phone {
  flex: 7;
}

.fixed-bottom {
  position: fixed;
  left: 0%;
  bottom: 0;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  width: 100%;
}
button{
  margin-top: 30rpx;
}