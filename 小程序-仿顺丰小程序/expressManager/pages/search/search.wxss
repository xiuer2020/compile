.search {
  padding-left: 14rpx;
  padding-right: 14rpx;
}

.search .search-icon {
  flex: 1;
  text-align: center;
}

.search .search-input {
  height: 76rpx;
  flex: 8;
}

.search .icon-chazhao::before {
  font-size: 24rpx;
}

.search .tab-inner-layout {
  margin: 20rpx 0;
}

.search .tab-inner-layout .tab {
  margin-right: 30rpx;
  padding-bottom: 10rpx;
}

.search .tab-inner-layout .tab.active {
  color: #ff0000;
  border-bottom: 1px solid #F00;
}

.search .content {
  position: relative;
  min-height: 80vh;
}

.search .content .order {
  border-radius: 8rpx;
  margin-bottom: 30px;
}


.search .content .order .title {
  color: #ffffff;
  background: #544e4e;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  padding: 14rpx;
}

.search .content .order .info {
  text-align: center;
  width: 160px;
}

.search .content .order .to {
  text-align: center;
}

.search .content .order .info .site {
  font-weight: 900;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.search .content .order .info .name {
  color: #ccc;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}