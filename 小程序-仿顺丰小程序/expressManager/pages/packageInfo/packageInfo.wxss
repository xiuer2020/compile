/* 组件兼容 */



.package-info {
  padding-bottom: 100px;
}

/* 包裹信息 */

.package-info .form-layout {
  padding: 8px;
}
/* 表单布局组件 */

.package-info .base-flex-inner-layout .icon {
  padding: 2px 4px;
  margin-right: 16px;
  border-radius: 2px;
  font-size: 14px;
  font-weight: 900;
  color: #e8e8e8;
  position: relative;
}

.package-info .base-flex-inner-layout .icon.from {
  background: #ff0000;
}

.package-info .base-flex-inner-layout .icon.to {
  background: #272727;
}

.package-info .base-flex-inner-layout .from::before {
  position: absolute;
  content: '';
  left: 10px;
  top: 35px;
  border-left: 1px dotted #9c9898;
  width: 2px;
  height: 46px;
}

.package-info .base-flex-inner-layout .title{
  color:#272727;
}

.package-info .base-flex-inner-layout .desc{
  color: #9c9898;
}

/* 基本信息 */


.package-info .title{
  color: #7d7979;
}

.package-info .desc{
  color: #9c9898;
}

/* 列表项 */

.package-info .day-inner-layout {
  flex: 1;
}

.package-info .day-inner-layout .day{
  padding: 30px 60px 30px 30px;
  background: #e8e8e8;
}

.package-info .day-inner-layout .day.active {
  background: #fff;
  color: #ff0000;
}



.package-info .date-outer-layout {
  flex: 2;
}

.package-info .date-outer-layout .date {
  padding: 0 30px;
  color: #272727;
  line-height: 74px;
}

.package-info .date-outer-layout .date.active {
  color: #f00;
}

.package-info .confirm{
  background: #ff0000;
  color: #ffffff;
  border-radius: 20px;
}

/* 上门时间 */


.package-info .fixed-bottom {
  position: fixed;
  left: 0%;
  right: 0;
  bottom: 0;
  height: 100px;
  background: #fff;
}

.package-info .fixed-bottom label{
  margin-right: 12px;
}

.package-info .fixed-bottom button {
  margin-top: 16px;
}