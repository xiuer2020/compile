.index {}

.index .swiper-inner-layout {
  border-radius: 4px;
  height: 142px;
  overflow: hidden;
}

.swiper-image {
  width: 100%;
}

.type-outer-layout {
  position: relative;
  margin: 30px 8px;
  padding-bottom: 40px;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0px 0px 4px 0px #0004;
}

.type-inner-layout {
  display: flex;
  flex-wrap: wrap;
  border-radius: inherit;
}

type {
  width: 50%;
}

.more-inner-layout {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  color: #9c9898;
  font-size: 12px;
  font-weight: 400;
}